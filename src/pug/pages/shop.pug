
//- TEMPLATE

extends ../common/layouts/_layout

block startOpt
    -startPath = '../'; 
    -pageId = 'shop';   
prepend metas
    meta(name="description" content='some dscr')
    meta(name="keywords" content='some keyw')
    //- social prev-s
    -var socVars = {type: 'some type', title: 'some title', descr: 'some dscr', img: 'some link'}
    +social(socVars)
block content
    //- HEADER
    -var activeIndex = 1
    include ../common/layouts/_header
    //- MAIN CONTENT
    // MAIN CONTENT
    main.main
        section.main-view
            .container
                .main-view__inner-wrap
                    h2.main-view__title.title Shop
                    ul.scroll-col__list#product-list

    // MAIN CONTENT - end
    // FOOTER
    include ../common/layouts/_footer
    // FOOTER - end

block templates
    //- product item
    template#product-item
        li.scroll-col__item
            .table__img-col
                picture
                    source(srcset="" media="(max-width: 576px)")
                    source(srcset="" media="(max-width: 992px)")
                    source(srcset="" data-img-origin)
                    img(srcset="" alt="My default image" data-img-default)
            .table__dscr-col
                .info-dscr(data-faq-dscr)
                    span.info-dscr__close
                    .info-dscr__inner
                        .info-dscr__scroller
                            .info-dscr__title FAQ 
                            .info-dscr__text-box(data-faq-box)
                                    .info-dscr__text 
                .info-dscr(data-ingrid-dscr)
                    span.info-dscr__close
                    .info-dscr__inner
                        .info-dscr__scroller
                            .info-dscr__title Ingredients
                            ul.info-dscr__text(data-ingredients-list)
                                //- li 
                .info-dscr.message(data-message)
                    //- span.info-dscr__close
                    .info-dscr__inner
                        .info-dscr__scroller
                            .info-dscr__text Thank you!
                            .info-dscr__text Item added to cart.
                            .btns-row
                                a.accent-btn.simple.continue(href=`#`) CONTINUE SHOPPING
                                a.accent-btn(href=`${startPath}pages/orders.html`) PROCEED TO CHECKOUT
                .dscr-col__top
                    .table__col.table__col--left
                        .table__title(data-title) 
                        .table__content-box(data-content-box)
                            //- .table__content
                        ul.table__more-list
                            li.table__more-item.modal-triger(data-video-src="") Watch video
                            li.table__more-item.faq-triger FAQ
                            li.table__more-item.ingrid-triger Ingredients
                    .table__col.table__col--right
                        .table__title Price
                        .table__content <span data-price></span>
                .btns-row
                    a.accent-btn(href="#" data-product-id="") ADD TO CART
                    +counter('')

    //- text content
    template#video-content
        .video-container__outer
            .video-container__inner
                iframe(src="#" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen)
                script(src="https://player.vimeo.com/api/player.js")

